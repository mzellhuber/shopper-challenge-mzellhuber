<%= render 'layouts/navbar'%>

<div class="container margin-top">
  <div class="h2 text-center">Enter your email to see your application details</div>
  <div class="form form-signin">
    <%= form_tag search_applicants_path, :method => 'get' do %>
      <div class="row">
        <%= text_field_tag :email, params[:email], :class => "form-control", :required => "required", :type =>"email" %>
        <br/>
      </div>
      <div class="row text-center">
        <%= submit_tag 'Search', :name => nil, :class => "btnApply" %>
      </div>
    <% end %>
  </div>
</div>
