<%= render 'layouts/navbar'%>

<p id="notice"><%= notice %></p>

<div class="container margin-top">
  <div class="text-center">
      <h2>Hello <%= @applicant.first_name %> <br> Here are the details of your application</h2>
  </div>

  <div class="form form-signin">

    <div class="row">

      <div class="panel panel-default">

          <div class="panel-body">

              <p>
                <strong>First name:</strong>
                <%= @applicant.first_name %>
              </p>

              <p>
                <strong>Last name:</strong>
                <%= @applicant.last_name %>
              </p>

              <p>
                <strong>Region:</strong>
                <%= @applicant.region %>
              </p>

              <p>
                <strong>Phone:</strong>
                <%= @applicant.phone %>
              </p>

              <p>
                <strong>Email:</strong>
                <%= @applicant.email %>
              </p>

              <p>
                <strong>Phone type:</strong>
                <%= @applicant.phone_type %>
              </p>

              <p>
                <strong>Source:</strong>
                <%= @applicant.source %>
              </p>

              <p>
                <strong>Reason:</strong>
                <%= @applicant.reason %>
              </p>

          </div>

      </div>

    </div>


  </div>

</div>
<div class="container">
  <div class="row text-center">
      <%= link_to 'Edit', edit_applicant_path(@applicant), :class => "btnApply" %>
  </div>
</div>
