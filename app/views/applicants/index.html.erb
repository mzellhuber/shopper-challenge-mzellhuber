<p id="notice"><%= notice %></p>

<h1>Applicants</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Region</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Phone type</th>
      <th>Source</th>
      <th>Over 21</th>
      <th>Reason</th>
      <th>Workflow state</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applicants.each do |applicant| %>
      <tr>
        <td><%= applicant.first_name %></td>
        <td><%= applicant.last_name %></td>
        <td><%= applicant.region %></td>
        <td><%= applicant.phone %></td>
        <td><%= applicant.email %></td>
        <td><%= applicant.phone_type %></td>
        <td><%= applicant.source %></td>
        <td><%= applicant.over_21 %></td>
        <td><%= applicant.reason %></td>
        <td><%= applicant.workflow_state %></td>
        <td><%= link_to 'Show', applicant %></td>
        <td><%= link_to 'Edit', edit_applicant_path(applicant) %></td>
        <td><%= link_to 'Destroy', applicant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

